class Numbers::Parser

rule

number     : num END
num        : scientific
           | floating
           | integer
scientific : floating EXP integer     {result = val.join}
floating   : integer POINT UNSIGNED   {result = val.join}
integer    : SIGN UNSIGNED            {result = val.join}
           | UNSIGNED

end

---- inner ----
  def parse(tokens)
    @tokens = tokens
    do_parse
  end

  def next_token
    @tokens.shift
  end

